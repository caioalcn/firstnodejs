<html>
    <body>
        <div class='errors'>
            <%if(errorsValidator){%>
                <ul>
                    <%for(var i=0; i<errorsValidator.length; i++){%>
                        <li><%=errorsValidator[i].param%> - <%=errorsValidator[i].msg%></li>
                    <%}%>
                </ul>
            <%}%>
        </div>
        <form action="/products" method="post">
            <div>
                <label for="title">Title</label>
                <input type="text" id= "title" name="title" value="<%=product.title%>" placeholder="Set a Title"/>
            </div>
            <div>
                <label for="price">Price</label>
                <input type="text" id= "price" name="price" value="<%=product.price%>" placeholder="150.25"/>
            </div>
            <div>
                <label for="description">Description</label>
                <textarea cols="10" rows="10" id= "description" name="description" value="<%=product.description%>" placeholder="Set a Description"></textarea>
            </div>
            <input type="submit" value="Save"/>
        </form>
    </body>
</html>